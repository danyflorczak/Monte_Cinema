<div class="card m-3 bg-dark text-white" style="width: 30rem;">
  <div class="card-body">
    <%= render @movie %>
      <%= link_to "Back to movies", movies_path, class: "btn btn-primary m-2" %>
      <% if current_user.present? %>
        <% if manager? %>
          <%= link_to "Edit this movie", edit_movie_path(@movie) , class: "btn btn-success m-2"%> 
          <%= button_to "Destroy this movie", @movie, method: :delete, class: "btn btn-danger m-2" %>
        <%end%>
      <%end%>
  </div>
</div>