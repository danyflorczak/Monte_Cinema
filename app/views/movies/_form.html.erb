<%= form_with(model: movie) do |form| %>
    <%= render "shared/errors" , obj: @movie %>

  <div>
    <%= form.label :title, style: "display: block" %>
    <%= form.text_field :title %>
  </div>

  <div>
    <%= form.label :description, style: "display: block" %>
    <%= form.text_field :description %>
  </div>

  <div>
    <%= form.label :duration, style: "display: block" %>
    <%= form.text_field :duration %>
  </div>

  <div>
    <%= form.label :genre, style: "display: block" %>
    <%= form.text_field :genre %>
  </div>

  <div>
    <%= form.label :director, style: "display: block" %>
    <%= form.text_field :director %>
  </div>

  <div>
    <%= form.label :release_date, style: "display: block" %>
    <%= form.datetime_field :release_date %>
  </div>

  <div>
    <%= form.label :poster_image, style: "display: block" %>
    <%= form.file_field :poster_image %>
  </div>

  <div>
    <%= form.submit %>
  </div>
<% end %>
