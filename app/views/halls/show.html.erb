<div class="card m-3 bg-dark text-white" style="width: 30rem;">
  <div class="card-body">
    <%= render @hall %>
    <%= link_to "Edit this hall", edit_hall_path(@hall), class: "btn btn-success m-2" %> 
    <%= link_to "Back to halls", halls_path, class: "btn btn-primary m-2" %>
    <%= button_to "Destroy this hall", @hall, method: :delete, class: "btn btn-danger m-2" %>
  </div>
</div>

