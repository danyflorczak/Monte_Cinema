<h1>Screenings</h1>

<% @screenings.each do |screening| %>
  <div class="card m-3 bg-dark text-white" style="width: 30rem;">
    <div class="card-body">
      <%= render screening %>
      <p>
        <%= link_to "Show this screening", screening, class: "btn btn-outline-primary m-2"%>
      </p>
    </div>
  </div>
<% end %>
<div class="m-3"><%== pagy_bootstrap_nav(@pagy) %></div>

<%= link_to "New screening", new_screening_path, class: "btn btn-primary m-3" %>
