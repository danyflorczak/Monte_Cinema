<div id="<%= dom_id screening %>">

  <p>
    <strong>Movie:</strong>
    <%= Movie.find(screening.movie_id).title %>
  </p>

  <p>
    <strong>Hall:</strong>
    <%= Hall.find(screening.hall_id).name %>
  </p>
  
  <p>
    <strong>Start:</strong>
    <%= format_date(screening.start_time) %>
  </p>

  <p>
    <strong>End:</strong>
    <%= format_date(screening.end_time) %>
  </p>

  <p>
    <strong>Price:</strong>
    <%= screening.price %>
  </p>

</div>
