<div class="card m-3 bg-dark text-white" style="width: 30rem;">
  <div class="card-body">
    <%= render @screening %>
    <%= link_to "Edit this screening", edit_screening_path(@screening), class: "btn btn-success m-2" %> 
    <%= link_to "Back to screenings", screenings_path, class: "btn btn-primary m-2" %>
    <%= button_to "Destroy this screening", @screening, method: :delete, class: "btn btn-danger m-2" %>
  </div>
</div>
