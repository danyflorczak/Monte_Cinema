<div id="carouselExampleIndicators" class="carousel slide my-0" data-bs-ride="carousel">
  <div class="carousel-indicators">
    <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="0" class="active" aria-current="true" aria-label="Slide 1"></button>
    <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="1" aria-label="Slide 2"></button>
    <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="2" aria-label="Slide 3"></button>
  </div>
  <div class="carousel-inner">
    <div class="carousel-item active">
      <%= image_tag "oppenheimer.jpeg", class: "d-block w-100", alt: "First slide", height: "500px" %>
    </div>
    <div class="carousel-item">
      <%= image_tag "barbie.jpeg", class: "d-block w-100", alt: "Second slide", height: "500px" %>
    </div>
    <div class="carousel-item">
      <%= image_tag "batman.jpeg", class: "d-block w-100", alt: "Third slide", height: "500px" %>
    </div>
  </div>
  <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide="prev">
    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
    <span class="visually-hidden">Previous</span>
  </button>
  <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide="next">
    <span class="carousel-control-next-icon" aria-hidden="true"></span>
    <span class="visually-hidden">Next</span>
  </button>
</div>
<div class="mt-4">
  <h2 class="text-padding-center py-4">Buy Ticket</h2>
  <div class="row">
    <% @movies.each do |movie| %>
      <div class="col-md-2 text-dark" id="movie-card">
        <%= link_to movie do %>
          <div class="card mt-2 mb-2">
            <% if movie.poster_image.present? %>
              <%= image_tag movie.poster_image, size: "230x340" %>
            <% else %>
              <%= image_tag "movie-default.jpg", size: "230x340" %>
            <% end %>
            <div class="card-body">
              <h5 class="card-title"><%= movie.title %></h5>
            </div>
          </div>
        <% end %>
      </div>
    <% end %>
  </div>