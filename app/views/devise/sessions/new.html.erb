<div class="container py-5" style="max-width: 540px;"> 
  <h2>Log in</h2>

  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="form-outline mb-4">
      <%= f.label :email, class: "form-label" %>
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %>
    </div>

    <div class="form-outline mb-4">
      <%= f.label :password, class: "form-label" %>
      <%= f.password_field :password, autocomplete: "current-password", class: "form-control" %>
    </div>

  <div class="row mb-4">
    <div class="col d-flex justify-content-center">
      <!-- Checkbox -->
       <% if devise_mapping.rememberable? %>
          <div class="form-check">
            <%= f.check_box :remember_me %>
            <%= f.label :remember_me %>
          </div>
        <% end %>
    </div>

    <div class="col">
    <%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
      <div class="mb-3">
        <%= link_to "Forgot your password?", new_password_path(resource_name) %><br />
      </div>
    <% end %>
    </div>
  </div>

    <div class="mb-3 text-center btn-larger">
      <%= f.submit "Log in", class: "btn btn-primary w-75" %>
    </div>
  <% end %>
  <div class="text-center">
    <p>Not a member? <%= link_to "Register", new_user_registration_path %></p>
    <p>or sign up with:</p>
    <%- if devise_mapping.omniauthable? %>
      <%- resource_class.omniauth_providers.each do |provider| %>
        <%= form_for "Login", url: omniauth_authorize_path(resource_name, provider), method: :post, data: {turbo: false} do |f| %>
          <%= f.submit "Login", type: "image", src: url_for("/assets/btn_google_signin_dark_normal_web.png") %>
        <% end %>
      <% end %>
    <% end %>
  </div>
</div>
