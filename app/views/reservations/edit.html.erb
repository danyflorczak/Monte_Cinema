<h1>Editing Reservation status</h1>

<%= form_with(model: @reservation) do |form| %>
  <%= render "shared/errors" , obj: @reservation %>
  <p>
    <strong>Reservation ID:</strong>
     <%= @reservation.id %>
  </p>

  <ul>
    <li>
        <strong>Movie:</strong>
        <%= @reservation.screening.movie.title %>
    </li>

    <li>
        <strong>Hall:</strong>
        <%= @reservation.screening.hall.name %>
    </li>

    <li>
        <strong>Seat:</strong>
        <%= @reservation.tickets.map(&:seat).join(", ") %>
    </li>

    <li>
        <strong><%= form.label :status, style: "display: block" %></strong>
        <%= form.select(:status, Reservation.statuses.keys) %>
    </li>

  <div>
    <%= form.submit %>
  </div>
<% end %>


<br>

<div>
  <%= link_to "Back to reservations", reservations_path %>
</div>
